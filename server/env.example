# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/matrimony-connect

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# Client URL
CLIENT_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@matrimonyconnect.com
ADMIN_EMAIL=admin@matrimonyconnect.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# WhatsApp Configuration (WhatsApp Business API)
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PUBLIC_KEY=your-stripe-public-key

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# File Upload
MAX_FILE_SIZE=5242880 # 5MB in bytes

# OTP Configuration
OTP_EXPIRY=10 # minutes
OTP_LENGTH=6
OTP_TYPE=numeric # numeric or alphanumeric
MAX_OTP_ATTEMPTS=3
OTP_COOLDOWN=1 # minutes

# App Settings
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100
PROFILE_PHOTOS_LIMIT=10
SUCCESS_STORY_PHOTOS_LIMIT=5
CHAT_HISTORY_DAYS=180 # How long to keep chat history
ACTIVITY_LOG_DAYS=365 # How long to keep activity logs

# Google Maps API (for geocoding locations)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# IP Geolocation (for location detection)
IPINFO_TOKEN=your-ipinfo-token

# Feature Flags (enable/disable features)
ENABLE_WHATSAPP_OTP=false
ENABLE_SMS_OTP=true
ENABLE_EMAIL_OTP=true
ENABLE_GOOGLE_LOGIN=false
ENABLE_FACEBOOK_LOGIN=false
ENABLE_APPLE_LOGIN=false
ENABLE_VIDEO_CHAT=false
ENABLE_HOROSCOPE_MATCH=false